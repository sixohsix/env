#!/bin/bash

confirm () {
    # call with a prompt string or use a default
    read -r -p "${1:-Are you sure? [y/N]} " response
    case $response in
        [yY][eE][sS]|[yY])
            true
            ;;
        *)
            false
            ;;
    esac
}

pu () {
    git push -u origin HEAD $@
}

pu || (echo ; confirm "Push failed. Force push?" && pu -f)
